.new-goal-form
  = form_for [current_user, @goal] do |f|
    - if @goal.errors.any?
      .alert
        %ul
          - @goal.errors.full_messsages.each do |error|
            %li= error

    .field
      = f.text_field :name, placeholder: 'Name of Goal'
    .field
      = f.text_area :description, placeholder: 'Description'
    .field
      - if action_name === 'new'
        = f.submit 'Create Goal'
      - else
        = f.submit 'Save Goal'
